<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            <Button Height="35" Width="99" Background="Red" FontFamily="Arial Black" Click="LoadProducts" >Load
            </Button>
        </ToolBar>
        <DataGrid DockPanel.Dock="Top" Name="datagrid"></DataGrid>
        <Canvas>
            <TextBox Name="id_product" Width="400" Height="20" KeyDown="id_product_KeyDown"></TextBox>
            <Button Canvas.Top="25" Canvas.Left="160" Click="getProduct">Product</Button>
        </Canvas>
    </DockPanel>
</Window>
